declare
fun {SumDigits N}
	if N == 0 then 0
	else 
		(N mod 10) + {SumDigitsR (N div 10)}
	end
end

declare
fun {SumDigitsN S}
   fun {SumDigits2 S A}
	  if S==0 then A
	  else
		 {SumDigits2 (S div 10) A+(S mod 10)}
	  end
   end
in
   {SumDigits2 S 0}
end

declare
fun {FactN I}
   fun {Fact2 I A}
	  if I==0 then A
	  else {Fact2 I-1 I*A} end
   end
in
   {Fact2 I 1}
end

{Browse {SumDigits 999999999}}
{Browse {SumDigitsN 999999999}}
